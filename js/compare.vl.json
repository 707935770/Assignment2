{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 580,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/707935770/Assignment2/main/Data/world-data-2023-updated.csv"
  },
  "params": [
    {
      "name": "population_above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100000000,
        "step": 1000000,
        "name": "Minimum Population: "
      }
    },
    {
      "name": "continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels":[
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.CPI > 0"},
    {"filter": "datum.GDP > 0"},
    {"filter": "datum.Population > population_above"},
    {"filter": "continent_selection == null || datum.continent == continent_selection"}
  ],
  "encoding": {
    "x": {
      "field": "Population",
      "type": "quantitative",
      "scale": {"type": "log", "domain": [10000, 1600000000]},
      "title": "Population"
    },
    "y": {
      "field": "GDP",
      "type": "quantitative",
      "scale": {"type": "log", "domain": [40000000, 25400000000000]},
      "title": "GDP"
    }
  },
  "layer": [
    {
      "params": [
        {
        "name": "grid",
        "select": "interval",
        "bind": "scales"
        },
        {
        "name": "continent_highlight",
        "select": {"type": "point", "fields": ["continent"]},
        "bind": "legend"
        },
        {
        "name": "highlight",
        "select": {"type": "point", "on": "mouseover"}
        }
      ],
      "mark": {
      "type": "circle",
      "stroke": "black",
      "strokeWidth": 1
      },
      "encoding": {
        "size": {
          "condition": {
            "param": "highlight",
            "empty": false,
            "value": 500
          },
          "field": "CPI",
          "type": "quantitative",
          "scale": {
            "type": "quantile",
            "domain": [100, 125, 150, 175, 200, 500],
            "range": [50, 120, 200, 300, 400, 500]
          },
          "legend": {"format": ""},
          "title": "CPI"
        },
        "color": {
          "field": "continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#89d3df",
              "#377eb8",
              "#a65628"
            ]
          },
          "title": "Continent"
        },
        "opacity": {
          "condition": {"param": "continent_highlight", "value": 0.7},
          "value": 0.05
        },
        "strokeOpacity": {
          "condition": [
            {
              "param": "highlight",
              "empty": false,
              "value": 1
            }
          ],
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "continent", "type": "nominal", "title": "Continent"},
          {"field": "GDP", "type": "quantitative", "format": "s", "title": "GDP"},
          {"field": "CPI", "type": "quantitative", "format": ",.2f"},
          {"field": "Population", "type": "quantitative", "format": "s"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 10.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
              "test": "datum.Country == 'South Korea' || datum.Country == 'China' || datum.Country == 'United States of America' || datum.Country == 'Peru' || datum.Country == 'Congo' || datum.Country == 'United Kingdom' || datum.Country == 'Canada' ||  datum.Country == 'Germany' ||  datum.Country == 'Chile'",
              "value": 1
          },
          "value": 0
        }
      }
    }
  ],
  "config": {
    "background": "#ddeefa"
  }
}