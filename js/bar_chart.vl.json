{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/707935770/Assignment2/main/Data/GDP_LIFE_TOP.csv"
  },
  "vconcat": [
  {
  "width": 180,
  "height": 300,
  "title": "Top 10 GDP Countries",
  "mark": "bar",
  "encoding": {
    "y": {
      "field": "Country",
      "type": "nominal",
      "sort":"-x"
    },
    "x": {
      "field": "GDP",
      "type": "quantitative",
      "title": "GDP",
      "axis": {"format": "s"}
    },
    "color": {
          "condition": [
            {
              "test": "datum.Country === 'China'",
              "value": "red"
            },
            {
              "test": "datum.Country === 'United States of America'",
              "value": "red"
            }
          ],
          "value": "grey" 
        }
   }
  },
  {
  "width": 180,
  "height": 300,
  "title": "Top 10 GDP Countries's Life expectancy",
  "mark": "bar",
  "encoding": {
    "y": {
      "field": "Country",
      "type": "nominal",
      "sort":"-x"
    },
    "x": {
      "field": "Life expectancy",
      "type": "quantitative",
      "title": "Life expectancy",
      "axis": {"grid": false}
    },
    "color": {
          "condition": [
            {
              "test": "datum.Country === 'China'",
              "value": "red"
            },
            {
              "test": "datum.Country === 'United States of America'",
              "value": "red"
            }
          ],
          "value": "grey"
        }
  }
  },
  {
    "width": 180,
    "height": 300,
    "title": "Top 10 GDP Countries's Co2 Emission",
    "mark": "bar",
    "encoding": {
      "y": {
        "field": "Country",
        "type": "nominal",
        "sort":"-x"
      },
      "x": {
        "field": "Co2",
        "type": "quantitative",
        "title": "Co2 Emission",
        "axis": {"grid": false}
      },
      "color": {
            "condition": [
              {
                "test": "datum.Country === 'China'",
                "value": "red"
              },
              {
                "test": "datum.Country === 'United States of America'",
                "value": "red"
              }
            ],
            "value": "grey"
          }
    }
    }],
  "config": {
    "background": "#ddeefa"
  }
}